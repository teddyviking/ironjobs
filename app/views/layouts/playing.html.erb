<section class="content center padding_top padding_bottom">
 
  <h1 class="font book insane bold center padding_bottom margin0 padding0 color dark_grey">Edit your company profile</h1>
  <h3 class="font color grey margin_bottom">Fill out your company information</h3>
  <div class="container">
  <div class="edit_profile col-md-6 col-centered  striped_bordered">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <article class="form-group padding text-left">
        <h3 class="font color semi_padding_left semi_padding_top grey text-left">Company information</h3>

          <div class="field">
            <%= f.label :description %><br />
            <%= f.text_area :description, class: "form-control" %>
          </div>

           <div class="field">
            <%= f.label :location %><br />
            <%= f.text_field :location, class: "form-control"%>
          </div>

        <div class="field">
          <%= f.label :web_site %><br>
          <%= f.url_field :url, class: "form-control"%>
        </div>

        <div class="field">
          <%= f.label :github %><br>
          <%= f.url_field :github, class: "form-control"%>
        </div>

        <div class="field">
          <%= f.label :twitter %><br>
          <%= f.url_field :twitter, class: "form-control"%>
        </div>

        <div class="field">
          <%= f.label :linkedin %><br>
          <%= f.url_field :linkedin, class: "form-control"%>
        </div>

        <div class="field">
          <%= f.label "Do you have open positions?" %><br>
          <%= f.check_box :searching, class: "form-control"%>
        </div>


      </article>
      
      <article>
        <h3 class="font color semi_padding_left semi_padding_top grey text-left">Account details</h3>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

         <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name %>
        </div>

         <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.label :phone %><br>
          <%= f.telephone_field :phone %>
        </div>

        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
      </article>
      <aside>
         <div class="actions">
          <%= f.submit "Update" %>
        </div>
        <% end %>
      </aside>
      <div>
        
      </div>
      </div>    
  </div>

</section>



  




